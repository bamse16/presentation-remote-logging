        h2 Debugging
        h3

        pre.language-obj-c
          code.
            if(DEBUG)
              NSLog(@"Application Started");

      section
        h2 Macros

        pre.language-obj-c
          code.
            #ifdef DEBUG
            #   define DLog(fmt, ...) NSLog((@"%s [Line %d] " fmt), ...)
            #else
            #   define DLog(...)
            #endif

            // ALog always displays output regardless of the DEBUG setting
            #define ALog(fmt, ...) NSLog((@"%s [Line %d] " fmt), ...)

      section
        h2 Macros usage:

        pre.language-obj-c
          code.

            DLog(@"Application Started");

      section
